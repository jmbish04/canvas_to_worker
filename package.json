{
  "name": "canvas-to-worker-factory",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:worker\"",
    "dev:frontend": "vite",
    "dev:worker": "wrangler dev",
    "build": "npm run build:frontend && npm run build:worker",
    "build:frontend": "tsc -p tsconfig.frontend.json && vite build",
    "build:worker": "// Worker build is handled by Wrangler usually, but we can add specific pre-build steps here if needed",
    "migrate": "wrangler d1 migrations apply DB --remote",
    "migrate:local": "wrangler d1 migrations apply DB --local",
    "deploy": "npm run build && npm run migrate && wrangler deploy",
    "tail": "wrangler tail",
    "generate:openapi": "tsx scripts/generate-openapi.ts"
  },
  "dependencies": {
    "@heroui/react": "^2.2.5",
    "@heroui/system": "^2.0.15",
    "@heroui/theme": "^2.1.17",
    "@hono/zod-openapi": "^0.9.5",
    "drizzle-orm": "^0.30.10",
    "framer-motion": "^11.0.8",
    "hono": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240222.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.14",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "wrangler": "^3.32.0"
  }
}
